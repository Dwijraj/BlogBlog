<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ddd"
    tools:context="firebaseapps.com.blogging.Postactivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:id="@+id/imageselect"
        android:src="@mipmap/ic_add_a_photo_white_24dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/image_src_backgroud"/>

    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titlefield"
        android:hint="Post title"
        android:singleLine="true"
        android:background="@drawable/input_outline"
        android:layout_below="@+id/imageselect"
        android:layout_alignParentStart="true"
        android:padding="15dp" />

    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionfield"
        android:hint="Post Details"
        android:background="@drawable/input_outline"
        android:layout_below="@+id/titlefield"
        android:layout_centerHorizontal="true"
        android:padding="15dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:id="@+id/Submitbutton"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
